        ],
        "parameters": [
          {
            "name": "coin",
            "in": "query",
            "required": true,
            "description": "possible coin value is one of them (btc,ada,algo,atom,avax,bnb,dot,egld,enj,eth,ftm,hbar,hnt,ksm,link,ltc,matic,near,one,qnt,sand,sol,theta,vet,xrp,xtz,zil)"
