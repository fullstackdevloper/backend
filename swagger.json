            "in": "query"
          },
          {
            "name": "dateFrom",
            "in": "query",
            "description": "please enter date like this format(2010-10-01)"
          },
          {
            "name": "dateTo",
            "in": "query",
            "description": "please enter date like this format(2010-11-10)"
